    private void userLoginLoginButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_userLoginLoginButtonActionPerformed

        // TODO add your handling code here:
        String userLoginName = userLoginUserNameTextField.getText();
        String userPassword = userLoginUserPasswordTextField.getText();

        DatabaseWrapper.intializeConnection();
        User loginUser = new User(userLoginName, userPassword);
        boolean passwordMatchResult = loginUser.login();
        if(passwordMatchResult)
        {
            Saad.classmodel.Security.SecurityManager.setCurrentlyLoggedInUser(loginUser);

            // TODO : Find proper method for closing a frame.
            this.setVisible(false);
            java.awt.EventQueue.invokeLater(new Runnable() {
                public void run() {
                    Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
                    Saad.gui.MainFrame mFrame = new Saad.gui.MainFrame();
                    mFrame.setPreferredSize(screenSize);
                    mFrame.setVisible(true);
                }
            });
        }
        else
        {
            JOptionPane.showMessageDialog(null, "Password mismatch.");
        }
    }//GEN-LAST:event_userLoginLoginButtonActionPerformed

